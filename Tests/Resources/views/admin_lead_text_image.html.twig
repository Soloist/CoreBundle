<div class="row-fluid">
    <div class="span12">
        <label class="label label-info" for="soloist_page_blocks_title_image_value">Image titre</label>
        {% include 'SoloistCoreBundle:Form:block_image.html.twig' with { form: form.blocks["title_image"] } %}
    </div>
</div>

<div class="row-fluid lead-block">
    <div class="span12">
        <label class="label label-info" for="soloist_page_blocks_lead_value">Chap√¥</label>
        {% include 'SoloistCoreBundle:Form:block_text.html.twig' with { form: form.blocks["lead"] } %}
    </div>
</div>

{% for i in 1..2 %}
    <div class="row-fluid">
        <div class="span8">
            <label class="label label-info" for="soloist_page_blocks_p_{{ i }}_value">Paragraphe {{ i }}</label>
            {% include 'SoloistCoreBundle:Form:block_text.html.twig' with { form: form.blocks['p_' ~ i] } %}
        </div>
        <div class="span4">
            <label class="label label-info" for="soloist_page_blocks_img_{{ i }}_value">Image {{ i }}</label>
            {% include 'SoloistCoreBundle:Form:block_image.html.twig'
                  with { form: form.blocks['img_' ~ i], block: node.getBlock('img_' ~ i) } %}
        </div>
    </div>
{% endfor %}

<div class="row-fluid">
    <div class="span12">
        <label class="label label-info" for="soloist_page_blocks_img_3_value">Illustration bas</label>
        {% include 'SoloistCoreBundle:Form:block_image.html.twig'
                  with { form: form.blocks['img_3'], block: node.getBlock('img_3') } %}
    </div>
</div>
